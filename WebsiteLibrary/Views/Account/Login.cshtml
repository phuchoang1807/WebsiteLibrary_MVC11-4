@model WebsiteLibrary.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div id="wrapper">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "form-login" }))
        {
            @Html.AntiForgeryToken()

            <div class="title-head">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" viewBox="0 0 512 512">
                    <path d="M160 96a96 96 0 1 1 192 0A96 96 0 1 1 160 96zm80 152l0 264-48.4-24.2c-20.9-10.4-43.5-17-66.8-19.3l-96-9.6C12.5 457.2 0 443.5 0 427L0 224c0-17.7 14.3-32 32-32l30.3 0c63.6 0 125.6 19.6 177.7 56zm32 264l0-264c52.1-36.4 114.1-56 177.7-56l30.3 0c17.7 0 32 14.3 32 32l0 203c0 16.4-12.5 30.2-28.8 31.8l-96 9.6c-23.2 2.3-45.9 8.9-66.8 19.3L272 512z" />
                </svg>
                <strong><p>LIBRARY</p></strong>
            </div>

            <div class="form-group">
                <svg xmlns="http://www.w3.org/2000/svg" height="14" width="12.25" viewBox="0 0 448 512">
                    <path d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464l349.5 0c-8.9-63.3-63.3-112-129-112l-91.4 0c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304l91.4 0C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7L29.7 512C13.3 512 0 498.7 0 482.3z" />
                </svg>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", @placeholder = "Email đăng nhập", @required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color: red;" })
            </div>

            <div class="form-group">
                <svg xmlns="http://www.w3.org/2000/svg" height="14" width="14" viewBox="0 0 512 512">
                    <path d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17l0 80c0 13.3 10.7 24 24 24l80 0c13.3 0 24-10.7 24-24l0-40 40 0c13.3 0 24-10.7 24-24l0-40 40 0c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z" />
                </svg>
                @Html.PasswordFor(m => m.Password, new { @class = "form-input", @placeholder = "Mật khẩu", @required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color: red;" })
            </div>

            <div class="under">
                <i>@Html.ActionLink("Quên mật khẩu?", "ForgotPassword", "Account")</i>
            </div>

            <input type="submit" value="Đăng nhập" class="form-submit">

            <div class="link">
                Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký ngay!", "Signup", "Account")
            </div>
        }
    </div>
</body>
</html>
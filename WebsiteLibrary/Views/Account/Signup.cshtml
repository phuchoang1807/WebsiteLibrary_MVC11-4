@model WebsiteLibrary.Models.ViewModels.SignupViewModel

@{
    ViewBag.Title = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library</title>
    <link rel="stylesheet" href="~/css/signup.css">
</head>
<body>
    <div id="wrapper">
        <form asp-action="Signup" method="post" id="form-signup">
            <div class="title-head">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" viewBox="0 0 512 512">
                    <path d="M160 96a96 96 0 1 1 192 0A96 96 0 1 1 160 96zm80 152l0 264-48.4-24.2c-20.9-10.4-43.5-17-66.8-19.3l-96-9.6C12.5 457.2 0 443.5 0 427L0 224c0-17.7 14.3-32 32-32l30.3 0c63.6 0 125.6 19.6 177.7 56zm32 264l0-264c52.1-36.4 114.1-56 177.7-56l30.3 0c17.7 0 32 14.3 32 32l0 203c0 16.4-12.5 30.2-28.8 31.8l-96 9.6c-23.2 2.3-45.9 8.9-66.8 19.3L272 512z" />
                </svg>
                <strong><p>LIBRARY</p></strong>
            </div>

            <label asp-for="Name">Họ và tên(*):</label>
            <div class="form-group">
                <input asp-for="Name" class="form-input" placeholder="Nhập tên tài khoản" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <label asp-for="Email">Email(*):</label>
            <div class="form-group">
                <input asp-for="Email" class="form-input" placeholder="Nhập Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <label asp-for="PhoneNumber">Số điện thoại(*):</label>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-input" placeholder="Nhập số điện thoại" required>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <label asp-for="Password">Mật khẩu(*):</label>
            <div class="form-group">
                <input asp-for="Password" class="form-input" placeholder="Mật khẩu" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <label asp-for="ConfirmPassword">Nhập lại mật khẩu(*):</label>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-input" placeholder="Nhập lại mật khẩu" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <label asp-for="DateOfBirth">Ngày sinh(*):</label>
            <div class="form-group">
                <input asp-for="DateOfBirth" class="form-input" required>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <label asp-for="Gender">Giới tính(*):</label>
            <div class="form-group">
                <select asp-for="Gender" class="form-input" required>
                    <option value="">Chọn giới tính</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <label asp-for="EducationLevel">Trình độ văn hóa(*):</label>
            <div class="form-group">
                <select asp-for="EducationLevel" class="form-input" required>
                    <option value="">Chọn trình độ văn hóa</option>
                    <option value="Trung học">Trung học</option>
                    <option value="Cao học">Cao học</option>
                </select>
                <span asp-validation-for="EducationLevel" class="text-danger"></span>
            </div>

            <label asp-for="Address">Địa chỉ(*):</label>
            <div class="form-group">
                <textarea asp-for="Address" class="form-input" placeholder="Nhập địa chỉ" required></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <input type="submit" value="Đăng ký" class="form-submit">

            <div class="link">
                Bạn đã có tài khoản? <a asp-action="Login">Đăng nhập ngay!</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var today = new Date();
            var dd = String(today.getDate()).padStart(2, '0');
            var mm = String(today.getMonth() + 1).padStart(2, '0');
            var yyyy = today.getFullYear();
            today = yyyy + '-' + mm + '-' + dd;
            document.getElementById('DateOfBirth').max = today;
        });
    </script>
</body>
</html>